<h1>All Plans</h1>

<table class="table">
  <tr>
    <th>Plan</th>
    <th>Price</th>
  </tr>

  <% @plans.each do |p| %>
  <tr>
    <td><%= link_to p.name, plan_path(p) %> (<%= p.sites.count %>)</td>
    <td><%= p.price %></td>
    <td><%= link_to 'Edit', edit_plan_path(p) %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'New Plan', new_plan_path, class: "btn btn-primary"  %>
