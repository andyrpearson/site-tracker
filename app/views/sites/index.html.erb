<h1>Listing sites</h1>

<%= link_to 'Create new site', new_site_path %>

<table>
  <tr>
    <th>Name</th>
    <th>URL</th>
  </tr>

  <% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.url %></td>
    <td><%= link_to 'Show', site_path(site) %></td>
  </tr>
  <% end %>
</table>
